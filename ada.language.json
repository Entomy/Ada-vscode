{
    "comments": {
        "lineComment": "--"
    },
    "brackets": [
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")", "notIn": ["string", "comment"] },
        { "open": "<<", "close": ">>", "notIn": ["string", "comment"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["<<", ">>"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "(?ig)\\brecord\\b",
            "end": "(?ig)\\bend\\s+record;"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "(?ig)\\brecord\\s*$",
        "decreaseIndentPattern": "(?ig)\\bend\\s+record\\s*;\\s*$"
    }
}