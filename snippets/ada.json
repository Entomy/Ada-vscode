    "use …;": {
        "prefix": "u",
        "body": "use $1;",
        "description": "Use import"
    },
    "when … =>": {
        "prefix": "when",
        "body": [
            "when $1 =>",
            "\t$0"
        ],
        "description": "When statement"
    },
    "while … loop … end loop": {
        "prefix": "whi",
        "body": [
            "while $1 loop",
            "\t$0",
            "end loop;"
        ],
        "description": "While loop"
    },
    "with …; use …;": {
        "prefix": "wu",
        "body": [
            "with $1; use $1;",
            "$0"
        ],
        "description": "With & use import"
    },
    "with …;": {
        "prefix": "w",
        "body": "with $1;",
        "description": "With import"
    }
